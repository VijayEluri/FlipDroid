<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:webimage="http://schemas.android.com/apk/res/com.goal98.flipdroid"
                xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/publisherWrapper"
                android:layout_width="fill_parent" android:layout_marginTop="3dip"
                android:layout_height="fill_parent" android:orientation="horizontal" android:gravity="bottom">

    <com.goal98.android.WebImageView android:id="@+id/portrait2" webimage:autoLoad="false"
                                     android:layout_height="25dip" webimage:defaultWidth="50" android:layout_alignParentLeft="true" android:layout_centerInParent="true"
                                     webimage:defaultHeight="25" webimage:progressDrawable="@drawable/portrait"
                                     android:layout_width="50dip"></com.goal98.android.WebImageView>

    <TextView  android:layout_marginLeft="3dip" android:id="@+id/author" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:textSize="16dip" android:gravity="center" android:layout_centerInParent="true" android:layout_toRightOf="@id/portrait2"></TextView>
    <TextView android:layout_marginLeft="4dip" android:id="@+id/createDate" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:textSize="12dip" android:gravity="center" android:layout_toRightOf="@id/author" android:layout_centerInParent="true"></TextView>
    <ProgressBar android:id="@+id/progressbar"
                 android:visibility="gone"
                 android:layout_toRightOf="@id/createDate"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:indeterminate="true"
                 android:indeterminateOnly="true"
                 style="?android:attr/progressBarStyleSmall">
    </ProgressBar>
    <TextView android:layout_marginLeft="4dip" android:id="@+id/textUrlLoading" android:layout_width="wrap_content" android:text="@string/url_loading"
              android:layout_height="wrap_content" android:textSize="12dip" android:layout_toRightOf="@id/progressbar" android:visibility="gone"/>
</RelativeLayout>