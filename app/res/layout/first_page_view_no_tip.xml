<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:webimage="http://schemas.android.com/apk/res/com.goal98.flipdroid"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"  android:background="@color/white"
                android:layout_height="match_parent" android:orientation="vertical" android:gravity="center">
    <com.goal98.android.WebImageView android:id="@+id/portrait" webimage:autoLoad="false"
                                     android:layout_height="180dip" webimage:defaultWidth="180"
                                     webimage:defaultHeight="180" android:layout_gravity="left"
                                     android:layout_width="180dip"
                                     webimage:progressDrawable="@drawable/portrait"
                                     android:paddingBottom="2dip"></com.goal98.android.WebImageView>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
              android:id="@+id/sourceName" android:layout_toRightOf="@id/portrait" android:textSize="25sp"
              style="@style/Article" android:visibility="gone" android:layout_alignParentTop="true"></TextView>
</RelativeLayout>