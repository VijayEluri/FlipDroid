<?xml version="1.0" encoding="utf-8"?>
<com.goal98.flipdroid.view.FlipPage
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/page" android:weightSum="480" android:orientation="vertical"
                                    style="@style/Page" android:background="#DDDDDD">

    <com.goal98.flipdroid.view.HeaderView android:background="#FFFFFF" android:id="@+id/header"
                                          android:layout_width="match_parent"
                                          android:layout_weight="40"
                                          android:layout_height="0dip" android:gravity="center">

    </com.goal98.flipdroid.view.HeaderView>
    <FrameLayout android:background="#f0f0f0" android:id="@+id/pageContainer" android:layout_width="match_parent"
                 android:layout_weight="410"
                 android:layout_height="0dip" android:gravity="center" android:orientation="horizontal">

    </FrameLayout>
    <com.goal98.flipdroid.view.PageIndexView android:background="#f0f0f0" android:id="@+id/pageIndex"
                                          android:layout_width="fill_parent"
                                          android:layout_weight="30"
                                          android:layout_height="0dip" android:gravity="center">

    </com.goal98.flipdroid.view.PageIndexView>
</com.goal98.flipdroid.view.FlipPage>