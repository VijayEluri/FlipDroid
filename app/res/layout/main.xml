<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:webimage="http://schemas.android.com/apk/res/com.goal98.flipdroid"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/page" android:weightSum="480" android:orientation="vertical"
              style="@style/Page" android:background="#DDDDDD">

    <LinearLayout android:background="#FFFFFF" android:id="@+id/header" android:layout_width="match_parent"
                  android:layout_weight="30"
                  android:layout_height="0dip" android:gravity="center">
        <!--<com.goal98.flipdroid.view.InternetImageView android:layout_marginBottom="2dip" android:src="@drawable/portrait"-->
        <!--android:id="@+id/headerImage" android:maxWidth="22dip"-->
        <!--android:adjustViewBounds="true" android:scaleType="fitCenter"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"></com.goal98.flipdroid.view.InternetImageView>-->
        <com.goal98.android.WebImageView android:id="@+id/headerImage" webimage:autoLoad="false"
                                         android:src="@drawable/portrait"
                                         android:layout_height="18dip" webimage:defaultWidth="18"
                                         webimage:defaultHeight="18" android:layout_marginBottom="2dip"
                                         android:layout_width="18dip"></com.goal98.android.WebImageView>

        <TextView android:layout_marginLeft="3dip" android:id="@+id/headerText" android:gravity="center"
                  android:textSize="18px" android:textStyle="bold" android:text="@string/sinaweiboheader"
                  android:layout_marginBottom="1px" android:layout_width="wrap_content"
                  android:layout_height="fill_parent"></TextView>
    </LinearLayout>
    <FrameLayout android:background="#C7C7C7" android:id="@+id/pageContainer" android:layout_width="match_parent"
                  android:layout_weight="450"
                  android:layout_height="0dip" android:gravity="center" android:orientation="horizontal">

    </FrameLayout>

</LinearLayout>