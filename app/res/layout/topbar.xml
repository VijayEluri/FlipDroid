<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/titleBar"
              android:background="@drawable/bg_header_shape"
              android:layout_width="fill_parent" android:orientation="horizontal"
              android:layout_height="30dip" android:paddingTop="4.4dip"
              android:paddingBottom="2.4dip" android:paddingLeft="3.5dip" android:paddingRight="3.5dip">
    <TextView android:id="@+id/topBarTitle" android:textColor="@color/white"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:gravity="center" android:layout_gravity="center"/>
    <LinearLayout android:layout_width="fill_parent" android:minWidth="95dip" android:layout_height="wrap_content" android:gravity="right">
        <ImageButton android:id="@+id/rightButton" android:background="@drawable/refresh"
                android:textSize="14px" android:layout_width="wrap_content" android:maxHeight="30dip" android:adjustViewBounds="true"
                android:layout_height="wrap_content" android:layout_gravity="right"/>
    </LinearLayout>

</LinearLayout>