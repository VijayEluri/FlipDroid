<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:id="@+id/exchange_rootId"
	android:background="#ffffff" android:layout_height="fill_parent">

	<RelativeLayout android:id="@+id/exchange_message"
		android:layout_width="fill_parent" android:background="@drawable/exchange_more_top"
		android:layout_height="51dp">
		<Button android:background="@drawable/exchange_selector_back"
			android:layout_centerVertical="true" android:gravity="center_vertical"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="10dp" android:paddingLeft="15dp"
			android:paddingTop="5dp" android:paddingBottom="10dp"
			android:paddingRight="15dp" android:id="@+id/exchange_back"
			android:text="收起">
		</Button>

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:textStyle="bold" android:shadowColor="#ffeeeeee"
			android:layout_centerInParent="true" android:shadowDx="1"
			android:shadowDy="1" android:shadowRadius="2" android:textSize="20dp"
			android:textColor="#4b4b4b" android:text="精品推荐">
		</TextView>
	</RelativeLayout>

	<ListView android:id="@+id/exchange_list" android:paddingLeft="5dp"
		android:paddingRight="5dp" android:cacheColorHint="#00000000"
		android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
		android:layout_width="fill_parent" android:layout_below="@+id/exchange_message"
		android:layout_above="@+id/exchange_footer" android:background="#00000000"
		android:dividerHeight="5dp" android:divider="#00000000"
		android:layout_height="fill_parent" android:scrollingCache="true">
	</ListView>
	<ImageView android:id="@+id/exchange_pb"
		android:layout_centerHorizontal="true" android:layout_centerVertical="true"
		android:layout_width="60dp" android:layout_height="60dp"
		android:visibility="gone" android:layout_gravity="center_vertical"
		android:src="@drawable/exchange_loading">
	</ImageView>
</RelativeLayout>