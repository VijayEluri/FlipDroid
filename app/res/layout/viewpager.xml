<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:wp="http://schemas.android.com/apk/res/com.goal98.flipdroid2" xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">
    <com.goal98.flipdroid2.view.TopBar android:id="@+id/topbar" wp:rightButtonImage="@drawable/like"
                                      android:layout_height="wrap_content"
                                      android:layout_width="fill_parent"
                                      wp:title="@string/mystream"></com.goal98.flipdroid2.view.TopBar>
    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <android.support.v4.view.PagerTitleStrip
                android:id="@+id/pagertitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top" android:background="@color/verylightblue"/>
    </android.support.v4.view.ViewPager>

</LinearLayout>