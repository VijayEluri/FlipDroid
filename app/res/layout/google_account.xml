<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="fill_parent"
               android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">
    <ImageView android:id="@+id/logo" android:adjustViewBounds="true" android:scaleType="centerInside"
               android:src="@drawable/google"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" android:padding="30dip"/>
    <TableLayout
            style="@style/SinaAccount"  android:gravity="top"
            android:orientation="vertical"
            android:paddingLeft="5dp" android:paddingRight="5dp" android:paddingTop="5dp">`


        <TableRow>

            <TextView android:text="@string/username" android:paddingLeft="20dp"/>

            <EditText android:id="@+id/sina_username"
                      android:layout_width="200dp" android:singleLine="true"
                      android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>

            <TextView android:text="@string/password" android:paddingLeft="20dp"/>

            <EditText android:id="@+id/sina_password"
                      android:password="true" android:singleLine="true"
                      android:layout_width="200dp"
                      android:layout_height="wrap_content"/>
        </TableRow>


        <Button android:id="@+id/sina_login"
                android:text="@string/button_login"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

    </TableLayout>
</LinearLayout>