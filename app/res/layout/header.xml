<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/flipper"
              xmlns:webimage="http://schemas.android.com/apk/res/com.goal98.flipdroid"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:gravity="center">
    <LinearLayout android:orientation="horizontal"
                  android:id="@+id/header"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent" android:gravity="left|center_vertical"
                  android:background="@color/white" android:weightSum="100">
        <LinearLayout android:orientation="horizontal" android:paddingTop="2dip" android:paddingBottom="2dip"
                      android:layout_width="0dip" android:layout_weight="30"
                      android:layout_height="fill_parent" android:paddingLeft="5dip"
                      android:background="@color/white" android:layout_gravity="left" android:gravity="left">
            <ImageButton android:id="@+id/content" android:background="@drawable/ic_menu_home"
                         android:layout_width="wrap_content"
                         android:adjustViewBounds="true" android:scaleType="center"
                         android:layout_height="wrap_content" android:layout_gravity="left"
                         android:gravity="left|center_vertical"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                      android:id="@+id/contentName"
                      android:layout_width="wrap_content" android:layout_centerInParent="true"
                      android:layout_height="fill_parent" android:gravity="center"
                      android:background="@color/white" android:layout_weight="50">
            <com.goal98.android.WebImageView android:id="@+id/headerImage" webimage:autoLoad="false"
                                             android:src="@drawable/portrait" webimage:roundImage="true"
                                             android:layout_height="wrap_content" webimage:defaultWidth="50"
                                             webimage:defaultHeight="50"
                                             android:layout_width="50dip" android:gravity="center"
                                             android:layout_gravity="right"></com.goal98.android.WebImageView>

            <TextView  android:id="@+id/headerText"
                      android:gravity="left|center_vertical" android:layout_gravity="left"
                      android:textSize="20dp" android:textStyle="bold" android:text="@string/sinaweiboheader"
                      android:singleLine="true"
                      android:layout_marginBottom="1px" android:layout_width="wrap_content"
                      android:ellipsize="end"
                      android:layout_height="fill_parent"></TextView>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:paddingLeft="5dip"
                      android:paddingTop="2dip" android:paddingBottom="2dip" android:layout_weight="20"
                      android:layout_height="wrap_content" android:gravity="left" android:background="@color/white">

            <Button android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="@string/button_update"
                    style="@style/UpdateButton"
                    android:layout_margin="3dp"
                    android:id="@+id/update"
                    android:visibility="invisible"
                    android:layout_gravity="left"/>
        </LinearLayout>
    </LinearLayout>


     <include layout="@layout/articleloadedtoolbar"/>

</ViewSwitcher>