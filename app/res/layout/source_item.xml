<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/AccountItem"
              android:orientation="horizontal">

    <com.goal98.flipdroid.view.InternetImageView
            android:id="@+id/source_image"
            android:src="@drawable/portrait"
            android:layout_height="wrap_content"
            android:layout_width="50dp"/>


    <LinearLayout android:layout_width="260dp" android:layout_height="wrap_content" android:orientation="vertical">
        <TextView
                android:id="@+id/source_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingLeft="5dip"
                android:singleLine="true"
                />
        <TextView
                android:id="@+id/source_desc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/gray"
                android:paddingLeft="5dip"
                android:singleLine="true"
                />
    </LinearLayout>

</LinearLayout>