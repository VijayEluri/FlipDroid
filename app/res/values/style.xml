<resources>

    <style name="Base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Cover" parent="Base">
    </style>

    <style name="Index" parent="Base">
        <item name="android:listViewStyle">@style/IndexList</item>
    </style>

    <style name="IndexList" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="SiteGrid" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="SourceGrid" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="SinaAccount" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TwitterAccount" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TencentAccount" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="AccountItem" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="Page" parent="Base">
    </style>

    <style name="Article" parent="Base">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EnlargedTitle" parent="Title">
    </style>

    <style name="ShareBy">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="Menu" parent="Base">
    </style>

    <style name="Button">
        <item name="android:background">@drawable/add_button</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:shadowColor">@color/lightblue</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>

    </style>

    <style name="CloseButton" parent="Button">
        <item name="android:background">@drawable/close_button</item>

        <item name="android:shadowColor">@color/red</item>

    </style>
    <style name="UpdateButton" parent="Button">
        <item name="android:background">@drawable/update_button</item>

        <item name="android:shadowColor">@color/darkgreen</item>

    </style>

    <style name="NewArticleNumber">
        <item name="android:background">@drawable/indicator</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:shadowColor">@color/darkred</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>

    </style>

    <style name="main_tab_bottom_empty" parent="main_tab_bottom">
        <item name="android:layout_height">0.0dip</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="HeaderView_ButtonText">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/header_btn_text_color</item>
        <item name="android:shadowColor">#ff555555</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">2.5</item>
    </style>
    <style name="TabItem_Layout">
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ShadowedText">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="Style.TabItem.Label" parent="@style/ShadowedText">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/maintab_text_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TabItem_Icon">
        <item name="android:layout_marginTop">6.0dip</item>
    </style>
</resources>