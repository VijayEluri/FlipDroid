<resources>

    <style name="Base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Cover" parent="Base">
    </style>

    <style name="Index" parent="Base">
        <item name="android:listViewStyle">@style/IndexList</item>
    </style>

    <style name="IndexList" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="SiteGrid" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="SourceGrid" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="SinaAccount" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TwitterAccount" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TencentAccount" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="AccountItem" parent="Base">
        <item name="android:textColor">#000</item>
    </style>

    <style name="Page" parent="Base">
    </style>

    <style name="Article" parent="Base">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EnlargedTitle" parent="Title">
    </style>

    <style name="ShareBy">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>



    <style name="Menu" parent="Base">
    </style>
</resources>