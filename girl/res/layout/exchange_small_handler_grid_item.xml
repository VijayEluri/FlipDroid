<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/exchange_scroll_view_item_id" android:layout_width="90dp"
	android:layout_height="wrap_content" android:orientation="horizontal"
	android:background="@drawable/exchange_grid_background_selector"
	android:padding="10dp">
	<ImageView android:layout_width="35dp" android:layout_height="35dp"
		android:layout_marginLeft="6dp" android:id="@+id/exchange_icon"
		android:layout_centerVertical="true"></ImageView>

	<TextView android:id="@+id/exchange_name"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textColor="#000000" android:layout_marginLeft="5dp"
		android:textSize="14dp" android:layout_marginTop="6dp" android:text="开心听"
		android:singleLine="true" android:marqueeRepeatLimit="marquee_forever"
		android:ellipsize="marquee">
	</TextView>
</LinearLayout>