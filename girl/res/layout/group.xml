<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" style="@style/AccountItem"
              android:padding="2dip">
    <RelativeLayout android:layout_marginLeft="25dip" android:id="@+id/background" android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView android:id="@+id/txt_group" android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:textSize="18sp"
                  android:layout_alignParentLeft="true"
                  android:gravity="center_vertical"
                  android:textColor="@color/grepblack"
                  android:paddingLeft="5dip"
                  android:singleLine="true"/>
        <TextView
                android:id="@+id/group_desc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/gray"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_below="@id/txt_group"/>
    </RelativeLayout>
    　　

</LinearLayout>